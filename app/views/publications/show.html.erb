<p style="color: green"><%= notice %></p>
<%= render @publication %>
<div>
   <%= link_to "Edit this Publication", edit_publication_path(@publication) %> |
    <%= link_to "Back to publication", publication_path %>
    <%= button_to "Destroy this publication", @publication, method: :delete %>
    <% Publication::Kinds.each do |kind| %>
    <%= button_to "#{Publication::KindsSpanish[kind]}",
        new_user_reaction_path(publication_id: @publication.id, reaction_type: "publication", kind: kind), method: :post %>
    <% end %>
</div>

